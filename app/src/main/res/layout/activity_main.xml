<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="266dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button15"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/m23"
                android:layout_marginRight="120dp"
                android:text="" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:text="生僻字" />
            <Button
                android:id="@+id/button14"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/m7"
                android:layout_marginLeft="120dp"
                android:text="" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@mipmap/m4"
                android:layout_marginRight="30dp"
                android:text="" />

            <Button
                android:id="@+id/button2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@mipmap/m21"

                android:layout_marginRight="30dp"
                android:text="" />

            <Button
                android:id="@+id/button3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"

                android:background="@mipmap/m1" />

            <Button
                android:id="@+id/button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@mipmap/m18"
                android:layout_marginRight="30dp"
                android:text="" />

            <Button
                android:id="@+id/button5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"


                android:background="@mipmap/m15" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="280dp"
            app:srcCompat="@mipmap/m22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="-125dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:text="00:00" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:thumb="@drawable/shape_circle"/>

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:text="03:36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="565dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="40dp"
                android:background="@mipmap/m13"
                android:text="" />

            <Button
                android:id="@+id/button9"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="40dp"
                android:background="@mipmap/m9"
                android:text="" />

            <Button
                android:id="@+id/button8"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="40dp"
                android:background="@mipmap/m10"
                android:text="" />

            <Button
                android:id="@+id/button7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/m8"
                android:layout_marginRight="38dp"
                android:text="" />

            <Button
                android:id="@+id/button6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/m12"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"
                android:text="陈柯宇" />

            <Button
                android:id="@+id/button16"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@mipmap/m25"
                android:text="" />


        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>